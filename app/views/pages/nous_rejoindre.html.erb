<h1>Pages#nous_rejoindre</h1>
<p>Find me in app/views/pages/nous_rejoindre.html.erb</p>

<%= form_with url: "/nous_rejoindre", method: :post, local: true do |form| %>
  <div>
    <%= form.label :nom, "Nom"%>
    <%= form.text_field :nom, require: true %>
  </div>
  <div>
    <%= form.label :prenom, "Prénom"%>
    <%= form.text_field :prenom, require: true %>
  </div>
  <div>
    <%= form.label :email, "Email"%>
    <%= form.email_field :email, require: true %>
  </div>
  <div>
    <%= form.label :telephone, "Téléphone"%>
    <%= form.text_field :telephone, require: true %>
  </div>
  <div>
    <%= form.label :message, "Message"%>
    <%= form.text_area :message, require: true %>
  </div>
  <div>
    <%= form.submit "Envoyer" %>
  </div>
<%end%>
